{
    "tasks": [
        {
            "type": "shell",
            "label": "Make engine .dll",
            "windows": {
                "command": "${workspaceFolder}/engine/make.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/engine/make.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "make Testbed .dll",
            "windows": {
                "command": "${workspaceFolder}/testbed/make.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/testbed/make.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/testbed"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "make both .dlls",
            "windows": {
                "command": "${workspaceFolder}/make-all.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/make-all.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}